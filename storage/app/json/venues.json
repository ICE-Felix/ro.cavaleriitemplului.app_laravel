{
  "name": {
    "singular": "venue",
    "plural": "venues",
    "label_singular": "Venue",
    "label_plural": "Venues"
  },
  "debug": [],
  "schema": {
    "id": {
      "label": "#",
      "type": "int",
      "readonly": true,
      "visible": false
    },
    "name": {
      "type": "text",
      "label": "Name",
      "placeholder": "Name"
    },
    "contact_name": {
      "type": "select",
      "label": "Contact",
      "key": "contact_id",
      "data": {
        "type": "class",
        "source": [
          "App\\Services\\Supabase\\SupabaseService",
          "read_edge",
          "contacts"
        ],
        "value": "id",
        "name": "{first_name} {last_name}"
      }
    },
    "categories": {
      "type": "hierarchical_checkbox",
      "label": "Categories",
      "key": "venue_category_id",
      "value": [],
      "data": {
        "type": "class",
        "source": [
          "App\\Services\\Supabase\\SupabaseService",
          "read_edge_filtered",
          "venue_categories",
          [
            "parent_id",
            "is",
            null
          ]
        ],
        "value": "id",
        "name": "name"
      },
      "subcategory_source": {
        "type": "class",
        "source": [
          "App\\Services\\Supabase\\SupabaseService",
          "read_edge_filtered",
          "venue_categories"
        ],
        "value": "id",
        "name": "name",
        "parent_field": "parent_id"
      }
    },

    "description": {
      "type": "trix",
      "label": "Description",
      "placeholder": "Description"
    },
    "phone_no": {
      "type": "text",
      "label": "Phone number",
      "placeholder": "+40720001222"
    },
    "email": {
      "type": "text",
      "label": "Email",
      "placeholder": "contact@venue.ro"
    },
    "image_url": {
      "key": "image_id",
      "type": "image",
      "label": "Gallery of location images",
      "upload_key": "image_base64"
    },
    "attribute_name": {
      "type": "checkbox",
      "label": "Addressability",
      "value": [],
      "key": "venue_attribute_id",
      "data": {
        "type": "class",
        "source": [
          "App\\Services\\Supabase\\SupabaseService",
          "read_edge",
          "venue_general_attributes"
        ],
        "value": "id",
        "name": "{type} - {value}"
      }
    },
    "address": {
      "type": "location",
      "label": "Address location",
      "placeholder": "Address location"
    },
    "is_active": {
      "type": "switch",
      "label": "Venue Status",
      "key": "is_active",
      "value": true,
      "on_label": "Active",
      "off_label": "Inactive"
    }
  },
  "GET": "edge",
  "INSERT": "edge",
  "DELETE": "edge",
  "UPDATE": "edge"
}
