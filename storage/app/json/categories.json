{
  "name": {
    "singular": "category",
    "plural": "categories"
  },
  "schema": {
    "id": {
      "label": "#",
      "type": "int",
      "readonly": true,
      "visible": false
    },
    "image_url": {
      "key": "image_id",
      "type": "image",
      "label": "Featured image"
    },
    "name": {
      "type": "text",
      "label": "Name",
      "placeholder": "Telefonie mobila"
    },
    "description": {
      "type": "textarea",
      "label": "Description",
      "rows": 5,
      "visible": false
    },
    "parent_name": {
      "type": "select",
      "label": "Parent category",
      "key": "parent_id",
      "data": {
        "type": "class",
        "source": [
          "App\\Services\\Supabase\\SupabaseService",
          "read",
          "categories"
        ],
        "value": "id",
        "name": "name"
      }
    },
    "status": {
      "type": "select",
      "data": {
        "source": {
          "active": {
            "value": "active",
            "name": "Active"
          },
          "inactive": {
            "value": "inactive",
            "name": "Inactive"
          }
        }
      }
    },
    "disabled_reason": {
      "type": "textarea",
      "label": "Disabled reason",
      "visible": false
    },
    "featured": {
      "type": "select",
      "cast": "bool",
      "data": {
        "source": {
          "true": {
            "value": "true",
            "name": "True"
          },
          "false": {
            "value": "false",
            "name": "False"
          }
        }
      }
    },
    "priority": {
      "label": "Priority",
      "type": "text",
      "visible": false
    }
  },
  "GET": "read_rpc",
  "INSERT": "create",
  "DELETE": "delete",
  "UPDATE": "update"
}
