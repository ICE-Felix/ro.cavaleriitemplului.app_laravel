{
  "name": {
    "singular": "service",
    "plural": "services",
    "label_singular": "Service",
    "label_plural": "Services"
  },
  "debug": ["POST"],
  "query_params": {
    "include_galleries": true
  },
  "schema": {
    "id": {
      "label": "#",
      "type": "int",
      "readonly": true,
      "visible": false
    },
    "image_url": {
      "key": "image_id",
      "type": "image",
      "label": "Featured image",
      "upload_key": "image_base64"
    },
    "service_provider_name": {
      "type": "select",
      "label": "Service Provider",
      "key": "service_provider_id",
      "data": {
        "type": "class",
        "source": [
          "App\\Services\\Supabase\\SupabaseService",
          "read_edge",
          "service_providers"
        ],
        "value": "id",
        "name": "name"
      },
      "required": true
    },
    "service_categories": {
      "type": "hierarchical_category",
      "label": "Categories",
      "key": "service_category_id",
      "value": [],
      "visible": false,
      "required": true,
      "data": {
        "type": "class",
        "source": [
          "App\\Services\\Supabase\\SupabaseService",
          "read_edge",
          "service_categories"
        ],
        "value": "id",
        "name": "name"
      }
    },
    "service_category_titles": {
      "type": "text",
      "label": "Categories",
      "key": "service_category_titles",
      "readonly": true,
      "visible": true
    },
    "woo_name": {
      "type": "text",
      "label": "Product Name",
      "placeholder": "e.g., Makeup Session, DJ Package",
      "required": true
    },
    "woo_description": {
      "type": "trix",
      "label": "Full Description",
      "placeholder": "Detailed product description...",
      "rows": 5
    },
    "woo_short_description": {
      "type": "textarea",
      "label": "Short Description",
      "placeholder": "Brief overview (shown in listings)",
      "rows": 3
    },
    "woo_regular_price": {
      "type": "text",
      "label": "Regular Price (RON)",
      "placeholder": "0.00",
      "min": 0,
      "required": true
    },
    "woo_sale_price": {
      "type": "text",
      "label": "Sale Price (RON)",
      "placeholder": "0.00",
      "min": 0
    },
    "woo_date_on_sale_from": {
      "type": "date",
      "label": "Sale Date Start",
      "key": "woo_date_on_sale_from",
      "placeholder": "YYYY-MM-DD"
    },
    "woo_date_on_sale_to": {
      "type": "date",
      "label": "Sale Date End",
      "key": "woo_date_on_sale_to",
      "placeholder": "YYYY-MM-DD"
    },
    "woo_manage_stock": {
      "type": "switch",
      "label": "Manage Stock",
      "key": "woo_manage_stock",
      "value": false,
      "on_label": "Yes",
      "off_label": "No",
      "visible": true
    },
    "woo_stock_quantity": {
      "type": "numeric",
      "label": "Available Units",
      "placeholder": "1",
      "min": 1
    },
    "woo_sku": {
      "type": "text",
      "label": "SKU",
      "placeholder": "e.g., SRV-001"
    },
    "woo_status": {
      "type": "select",
      "label": "Status",
      "visible": true,
      "value": "draft",
      "data": {
        "type": "static",
        "options": [
          { "value": "draft", "name": "Draft" },
          { "value": "pending", "name": "Pending" },
          { "value": "private", "name": "Private" },
          { "value": "publish", "name": "Publish" }
        ]
      }
    },
    "woo_featured": {
      "type": "switch",
      "label": "Featured Product",
      "on_label": "Yes",
      "off_label": "No"
    },
    "gallery": {
      "type": "gallery",
      "label": "Service Gallery",
      "key": "gallery-images",
      "value": null,
      "required": false,
      "visible": false,
      "min_images": 0,
      "max_images": 5
    }
  },
  "GET": "edge",
  "INSERT": "edge",
  "DELETE": "edge",
  "UPDATE": "edge"
}
