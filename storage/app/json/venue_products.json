{
  "name": {
    "singular": "venue_product",
    "plural": "venue_products",
    "label_singular": "Venue Product",
    "label_plural": "Venue Products"
  },
  "schema": {
    "id": {
      "label": "#",
      "type": "int",
      "readonly": true,
      "visible": false
    },
    "image_url": {
      "key": "image_id",
      "type": "image",
      "label": "Featured image",
      "upload_key": "image_base64"
    },
    
    "name": {
      "type": "text",
      "label": "Product Name",
      "placeholder": "e.g., Deluxe Double Room, Wedding Package",
      "required": true
    },
    "venue_name": {
      "type": "select",
      "label": "Venue",
      "key": "venue_id",
      "data": {
        "type": "class",
        "source": [
          "App\\Services\\Supabase\\SupabaseService",
          "read_edge",
          "venues"
        ],
        "value": "id",
        "name": "name"
      }
    },
    "category": {
      "type": "select",
      "label": "Product Category",
      "data": {
        "type": "static",
        "options": [
          {"value": "double_room", "name": "Double Room"},
          {"value": "single_room", "name": "Single Room"},
          {"value": "suite", "name": "Suite"},
          {"value": "wedding_venue", "name": "Wedding Venue"},
          {"value": "conference_hall", "name": "Conference Hall"},
          {"value": "event_space", "name": "Event Space"},
          {"value": "other", "name": "Other"}
        ]
      },
      "required": true
    },

    "description": {
      "type": "trix",
      "label": "Full Description",
      "placeholder": "Detailed product description...",
      "rows": 5
    },

    "short_description": {
      "type": "textarea",
      "label": "Short Description",
      "placeholder": "Brief overview (shown in listings)",
      "rows": 3
    },

    "base_price": {
      "type": "numeric",
      "label": "Base Price (RON)",
      "placeholder": "0.00",
      "min": 0,
      "required": true
    },

    "price_type": {
      "type": "select",
      "label": "Pricing Type",
      "data": {
        "type": "static",
        "options": [
          {"value": "per_day", "name": "Per Day"},
          {"value": "per_hour", "name": "Per Hour"},
          {"value": "per_event", "name": "Per Event (Flat Rate)"},
          {"value": "per_night", "name": "Per Night"}
        ]
      },
      "required": true
    },

    "stock_quantity": {
      "type": "numeric",
      "label": "Available Units",
      "placeholder": "1",
      "min": 1,
      "required": true
    },

    "max_capacity": {
      "type": "numeric",
      "label": "Maximum Capacity",
      "placeholder": "2",
      "min": 1
    },

    "ad_hoc_dates": {
      "type": "component",
      "component": "venue-product-calendar",
      "label": "Availability Calendar",
      "key": "ad_hoc_dates"
    },

    "blackout_dates": {
      "type": "component",
      "component": "date-picker-multi",
      "label": "Blackout Dates",
      "key": "blackout_dates"
    },

    "attributes": {
      "type": "component",
      "component": "product-attributes",
      "label": "Product Attributes",
      "key": "attributes"
    },

    "gallery_images": {
      "type": "component",
      "component": "gallery-uploader",
      "label": "Product Images",
      "key": "gallery_images",
      "min_images": 0,
      "max_images": 5
    },

    "status": {
      "type": "select",
      "label": "Status",
      "data": {
        "type": "static",
        "options": [
          {"value": "publish", "name": "Published"},
          {"value": "draft", "name": "Draft"}
        ]
      }
    },

    "featured": {
      "type": "switch",
      "label": "Featured Product",
      "on_label": "Yes",
      "off_label": "No"
    }
  },
  "GET": "edge",
  "INSERT": "edge",
  "DELETE": "edge",
  "UPDATE": "edge"
}