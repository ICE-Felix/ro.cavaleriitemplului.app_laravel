{
  "name": {
    "singular": "venue_product",
    "plural": "venue_products",
    "label_singular": "Venue Product",
    "label_plural": "Venue Products"
  },
  "debug": ["POST"],
  "schema": {
    "id": {
      "label": "#",
      "type": "int",
      "readonly": true,
      "visible": false
    },
    "image_url": {
      "key": "image_id",
      "type": "image",
      "label": "Featured image",
      "upload_key": "image_base64"
    },
    "woo_name": {
      "type": "text",
      "label": "Product Name",
      "placeholder": "e.g., Deluxe Double Room, Wedding Package",
      "required": true
    },
    "venue_name": {
      "type": "select",
      "label": "Venue",
      "key": "venue_id",
      "data": {
        "type": "class",
        "source": [
          "App\\Services\\Supabase\\SupabaseService",
          "read_edge",
          "venues"
        ],
        "value": "id",
        "name": "name"
      }
    },
    "categories": {
      "type": "select",
      "label": "Product Category",
      "data": {
        "type": "static",
        "options": [
          {"value": "double_room", "name": "Double Room"},
          {"value": "single_room", "name": "Single Room"},
          {"value": "suite", "name": "Suite"},
          {"value": "wedding_venue", "name": "Wedding Venue"},
          {"value": "conference_hall", "name": "Conference Hall"},
          {"value": "event_space", "name": "Event Space"},
          {"value": "other", "name": "Other"}
        ]
      },
      "required": true
    },
    "woo_description": {
      "type": "trix",
      "label": "Full Description",
      "placeholder": "Detailed product description...",
      "rows": 5
    },
    "woo_short_description": {
      "type": "textarea",
      "label": "Short Description",
      "placeholder": "Brief overview (shown in listings)",
      "rows": 3
    },
    "woo_regular_price": {
      "type": "numeric",
      "label": "Regular Price (RON)",
      "placeholder": "0.00",
      "min": 0,
      "required": true
    },
    "woo_sale_price": {
      "type": "numeric",
      "label": "Sale Price (RON)",
      "placeholder": "0.00",
      "min": 0,
      "required": true
    },
    "woo_date_on_sale_from": {
      "type": "date",
      "label": "Sale Date Start",
      "key": "date_on_sale_from",
      "required": false,
      "placeholder": "YYYY-MM-DD"
    },
    "woo_date_on_sale_to": {
      "type": "date",
      "label": "Sale Date End",
      "key": "date_on_sale_to",
      "required": false,
      "placeholder": "YYYY-MM-DD"
    },
    "price_type": {
      "type": "select",
      "label": "Pricing Type",
      "data": {
        "type": "static",
        "options": [
          {"value": "per_day", "name": "Per Day"},
          {"value": "per_hour", "name": "Per Hour"},
          {"value": "per_event", "name": "Per Event (Flat Rate)"},
          {"value": "per_night", "name": "Per Night"}
        ]
      },
      "required": true
    },
    "woo_manage_stock": {
      "type": "switch",
      "label": "Manage Stock",
      "key": "manage_stock",
      "value": false,
      "on_label": "Yes",
      "off_label": "No",
      "visible": true
    },
    "woo_stock_quantity": {
      "type": "numeric",
      "label": "Available Units",
      "placeholder": "1",
      "min": 1,
      "required": true
    },
    "max_capacity": {
      "type": "numeric",
      "label": "Maximum Capacity",
      "placeholder": "2",
      "min": 1
    },
    "ad_hoc_dates": {
      "type": "component",
      "component": "venue-product-calendar",
      "label": "Availability Calendar",
      "key": "ad_hoc_dates"
    },
    "gallery_images": {
      "type": "component",
      "component": "gallery-uploader",
      "label": "Product Images",
      "key": "gallery_images",
      "min_images": 0,
      "max_images": 5
    },
    "woo_status": {
      "type": "select",
      "label": "Status",
      "visible": true,
      "value": "draft",
      "data": {
        "type": "static",
        "options": [
          { "value": "draft", "name": "Draft" },
          { "value": "pending", "name": "Pending" },
          { "value": "private", "name": "Private" },
          { "value": "publish", "name": "Publish" }
        ]
      }
    },
    "woo_catalog_visibility": {
      "type": "select",
      "label": "Catalog Visibility",
      "visible": true,
      "value": "visible",
      "data": {
        "type": "static",
        "options": [
          { "value": "visible", "name": "Shop and search" },
          { "value": "catalog", "name": "Shop only" },
          { "value": "search", "name": "Search only" },
          { "value": "hidden", "name": "Hidden" }
        ]
      }
    },
    "woo_type": {
      "type": "select",
      "label": "Type",
      "visible": true,
      "value": "simple",
      "data": {
        "type": "static",
        "options": [
          { "value": "simple", "name": "Simple" },
          { "value": "grouped", "name": "Grouped" },
          { "value": "external", "name": "External" },
          { "value": "variable", "name": "Variable" }
        ]
      }
    },
    "woo_featured": {
      "type": "switch",
      "label": "Featured Product",
      "on_label": "Yes",
      "off_label": "No"
    }
  },
  "GET": "edge",
  "INSERT": "edge",
  "DELETE": "edge",
  "UPDATE": "edge"
}